@model LoginViewModel

@{
    ViewData["Title"] = "Login";

}

<h1>Login</h1>

@if (ViewData.Keys.Contains("message"))
{
    <p class="text-danger"> @ViewData["message"] </p>
}

<div class="card">
    <div class="card-body">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" autocomplete="off" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input type="checkbox" asp-for="Remember" class="form-check-input" />
                <label asp-for="Remember" class="form-check-label"></label>
            </div>

            <button class="btn btn-primary">Login</button>
            <a class="btn btn-success" asp-action="Register">Crear una nueva cuenta</a>

        </form>
    </div>
</div>

<!-- Para validacion en el front end con javascript -->
<partial name="_ValidationScriptsPartial" />

